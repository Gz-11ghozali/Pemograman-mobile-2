<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DC7C3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar dengan sudut melengkung -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imageViewRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/telurmatasapi" />
        </androidx.cardview.widget.CardView>

        <!-- Judul Resep -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telur Mata Sapi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <!-- Judul Bahan -->
        <TextView
            android:id="@+id/textViewIngredientsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bahan-Bahan:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp" />

        <!-- Daftar Bahan -->
        <TextView
            android:id="@+id/textViewIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• 1 butir telur\n• 1 sdm mentega atau minyak\n• Sejumput garam (opsional)"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp" />

        <!-- Judul Langkah -->
        <TextView
            android:id="@+id/textViewStepsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langkah-Langkah Membuat Telur Mata Sapi:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp" />

        <!-- Langkah-langkah -->
        <TextView
            android:id="@+id/textViewSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.) Panaskan wajan dengan api kecil.\n2.) Tambahkan mentega atau minyak ke dalam wajan.\n3.) Pecahkan telur dengan hati-hati agar kuning telur tidak pecah.\n4.) Masak hingga putih telur matang dan kuning telur masih setengah matang atau sesuai selera.\n5.) Tambahkan sedikit garam jika diinginkan.\n6.) Angkat dan sajikan di piring."
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
